<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

  <title>cinema</title>
  <link rel="stylesheet" href="style.css">
</head>

<body>
  
  <div style="margin:20px; text-align:center;">
    <h1>PVR Cinemas</h1>
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="https://www.koimoi.com/wp-content/new-galleries/2022/09/prime-video-announces-the-exclusive-streaming-premiere-of-the-poignant-romance-drama-sita-ramam-on-september-9-0001.jpg" class="d-block w-100" alt="sita ramam "style="height:350px"; >
    </div>
   
    </div>
  </div>
</div>
  </div>
  <div class="container" style="display:flex;align-items:center;justify-content:center">
    <div>
      <label>Select Cinema:</label>
      <select class="form-control" id="movie">
        {{#each movies}}
        <option value="{{rate}}">{{name}}/screen{{screenNo}}- Rs {{rate}}</option>
        {{!-- <option value="150">RRR/screen2 - Rs 150</option> --}}
        {{/each}}
      </select>
    </div>

    <ul class="showcase" style="list-style-type:none;margin:50px; margin-top:100px;display:flex;">

      <li style="text-align: center;">
        <div class="seat" style="margin: 15px;"></div>
        <small>Available</small>
      </li>
      <li style="text-align: center;">
        <div class="seat  selected" style=" margin: 15px;"></div>
        <small>Seleted</small>
      </li>
      <li style="text-align: center;">
        <div class="seat occupied" style=" margin: 15px;"></div>
        <small>Occupied</small>
      </li>
    </ul>
    <div style="width: 350px;">
      <div class="screen"></div>

      <div class="row" id="screen1">

        {{#each screen1}}
        <div class="seat {{status}}" id="{{seatno}}"></div>
        {{/each}}

      </div>
      <div class="row" id="screen2" style="visibility: hidden;display:none">
        {{#each screen2}}
        <div class="seat {{status}}" id="{{seatno}}"></div>

        {{/each}}

      </div>
      <div class="row" id="screen3" style="visibility: hidden;display:none">

        {{#each screen3}}
        <div class="seat {{status}}" id="{{seatno}}"></div>

        {{/each}}

      </div>

    </div>

  </div>

  <div class="row" id="finalCost" style="display: none; visibility:hidden;text-align:center;">
    <p id="cost"></p>
  </div>






  <script src="script.js"></script>

  <!-- Optional JavaScript; choose one of the two! -->

